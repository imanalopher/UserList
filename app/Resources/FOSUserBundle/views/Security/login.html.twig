{% extends "FOSUserBundle::layout.html.twig" %}

{% block body_id 'login' %}

{% block body %}

    <div class="menu-toggler sidebar-toggler">
    </div>
    <!-- END SIDEBAR TOGGLER BUTTON -->
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="{{ path('homepage') }}">
            <img src="{{ asset("public/admin/layout/img/logo-big.png")}}" alt=""/>
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->

    <div class="content">
        <form class="login-form" action="{{ path("fos_user_security_check") }}" method="post">
            <h3 class="form-title">Авторизация</h3>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9" for="username">Логин</label>
                <input class="form-control form-control-solid placeholder-no-fix" placeholder="Логин" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9" for="password">Пароль</label>
                <input class="form-control form-control-solid placeholder-no-fix" placeholder="Пароль" type="password" id="password" name="_password" required="required" />
            </div>

            <div class="form-actions">
                <input class="btn btn-success uppercase" type="submit" id="_submit" name="_submit" value="Войти" />
            </div>
        </form>
    </div>

    <!-- END SIDEBAR TOGGLER BUTTON -->

    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}


{% endblock body %}
